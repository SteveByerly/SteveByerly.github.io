{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015.promise",
      "es5"
    ],
    "module": "esnext",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "**/*.spec*"
  ],
  "include": [
    "./**/*.ts"
  ]
}
